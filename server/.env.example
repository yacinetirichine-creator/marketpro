# ============================================
# MARKET PRO API - Configuration
# ============================================

# Environnement
NODE_ENV=development
PORT=3001

# MongoDB
MONGODB_URI=mongodb://localhost:27017/marketpro
# Pour MongoDB Atlas en production:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/marketpro

# JWT
JWT_SECRET=votre-secret-jwt-super-securise-changez-en-production
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
